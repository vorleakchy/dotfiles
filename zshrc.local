# Enable 256-color mode when screen is started
export TERM='xterm-256color'

# Editor
export VISUAL=vim
export EDITOR=$VISUAL

# tmuxifier
export PATH="$HOME/.tmuxifier/bin:$PATH"
eval "$(tmuxifier init -)"
export TMUXIFIER_LAYOUT_PATH="$HOME/Dropbox/Work/tmuxifier-layouts"

# Fuzzy finder
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# asdf
. $HOME/.asdf/asdf.sh
. $HOME/.asdf/completions/asdf.bash

export PATH="$HOME/.bin:$PATH"
