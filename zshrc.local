# Enable 256-color mode when screen is started
export TERM='xterm-256color'

# Editor
export VISUAL=nvim
export EDITOR=$VISUAL

# rbenv
export PATH="$HOME/.bin:$PATH"
eval "$(rbenv init - --no-rehash)"

# tmuxifier
export PATH="$HOME/.tmuxifier/bin:$PATH"
eval "$(tmuxifier init -)"
export TMUXIFIER_LAYOUT_PATH="$HOME/Dropbox/Work/tmuxifier-layouts"

# Fuzzy finder
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

